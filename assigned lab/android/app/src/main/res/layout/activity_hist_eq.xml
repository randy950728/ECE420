<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_hist_eq"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ece420.lab6.HistEq">

    <TextView
        android:id="@+id/Helper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:text="Closest Image"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        tools:layout_editor_absoluteY="343dp"
        app:layout_constraintLeft_toLeftOf="@+id/output"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/output"
        app:layout_constraintHorizontal_bias="0.523" />

    <TextView
        android:id="@+id/HETitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Input Image"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:layout_alignParentStart="true"
        tools:layout_editor_absoluteY="343dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/test_input"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/test_input" />

    <ImageView
        android:id="@+id/output"
        android:layout_width="256dp"
        android:layout_height="432dp"
        android:layout_below="@+id/Helper"
        android:layout_marginRight="0dp"
        android:layout_toStartOf="@+id/test_input"
        android:adjustViewBounds="true"
        android:maxHeight="300dp"
        android:maxWidth="300dp"
        android:scaleType="fitCenter"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@android:color/darker_gray"
        tools:layout_editor_absoluteY="375dp" />

    <Button
        android:id="@+id/reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Helper"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:text="Reset"
        app:layout_constraintBottom_toBottomOf="@+id/Helper"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/camera_input"
        app:layout_constraintVertical_bias="0.093" />

    <Button
        android:id="@+id/test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Helper"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/reset"
        android:text="Test"
        android:layout_alignEnd="@+id/Helper"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/camera_input"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/test_input"
        app:layout_constraintRight_toLeftOf="@+id/reset"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.023"
        app:layout_constraintVertical_bias="0.076" />

    <SurfaceView
        android:id="@+id/camera_input"
        android:layout_width="539dp"
        android:layout_height="264dp"
        android:layout_above="@+id/reset"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/HETitle"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="7dp"
        app:layout_constraintHorizontal_bias="0.511" />

    <ImageView
        android:id="@+id/test_input"
        android:layout_width="256dp"
        android:layout_height="432dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/reset"
        android:layout_below="@+id/Helper"
        android:layout_marginLeft="16dp"
        android:layout_toEndOf="@+id/Helper"
        android:scaleType="fitCenter"
        app:layout_constraintLeft_toLeftOf="parent"
        app:srcCompat="@android:color/darker_gray"
        tools:layout_editor_absoluteY="375dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Input"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/test"
        tools:layout_editor_absoluteY="771dp"
        tools:layout_editor_absoluteX="135dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guess"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/reset"
        tools:layout_editor_absoluteY="772dp"
        tools:layout_editor_absoluteX="426dp" />

</android.support.constraint.ConstraintLayout>
